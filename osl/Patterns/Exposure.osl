shader TS_Exposure (
    color Icol = 0
    [[
        string label = "Color"
    ]],
    float ifl = 0
    [[
        string label = "Float"
    ]],
    float Stops = 0
    [[
        string help = "<b>Stops of exposure</b>",
        int connectable = 0
    ]],

    output color Color = 0,
    output float Float = 0,
) 
{
    Color = Icol * exp2(Stops);
    Float = ifl * exp2(Stops);
}